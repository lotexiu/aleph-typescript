{
  "name": "aleph-typescript",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo dev",
    "lint": "turbo run lint",
    "format": "prettier --use-tabs --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "new": "turbo gen workspace",
    "mismatch": "pnpm dlx syncpack list-mismatches",
    "outd": "pnpm outdated -r",
    "upd": "pnpm up -r -i",
		"upd-l": "pnpm up -r -L",
    "git-init": "git submodule update --init --recursive",
    "git-sync": "pnpm git-init && git submodule update --remote --recursive && git pull",
		"clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' + && pnpm store prune"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.19.1",
    "@vitejs/plugin-react": "^5.1.1",
    "chalk": "^5.6.2",
    "fs-extra": "^11.3.2",
    "ora": "^9.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4"
  },
  "packageManager": "pnpm@10.21.0",
  "engines": {
    "node": ">=18"
  }
}
